<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-3">
      
    </div>
    <div class="col-sm-6" >
      <h1>Riders in this dang race</h1>

      <table style="text-align:center;width:100%;">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>City</th>
            <th>State</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @riders.each do |rider| %>
            <tr>
              <td><%= rider.first_name %></td>
              <td><%= rider.last_name %></td>
              <td><%= rider.city %></td>
              <td><%= rider.state %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3">
      
    </div>
  </div>
</div>